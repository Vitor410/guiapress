<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<div class="container mt-4">
    <h2>Lista de Imóveis</h2>
    <a href="/admin/articles/new" class="btn mb-3" style="background-color:#a0522d; color:#fff; font-weight:bold;">Novo Imóvel</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Foto</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td>
                        <% if(article.photo) { %>
                            <img src="<%= article.photo %>" alt="Foto" style="max-width:80px;max-height:60px;">
                        <% } %>
                    </td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                         <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning btn-sm">Editar</a>
                         <form method="POST" action="/articles/delete" style="display:inline;" onsubmit="confirmarDelecao(event, this)">
                             <input type="hidden" name="id" value="<%= article.id %>">
                             <button class="btn btn-danger">Deletar</button>
                         </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include("../../partials/footer.ejs") %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar este imóvel?")
        if(decision){
            form.submit();
        }
    }
</script>

